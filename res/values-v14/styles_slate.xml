<resources>

    <style name="Theme.Slate" parent="@style/Theme.Sherlock">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_slate</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Slate</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Slate</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Slate</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Slate</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Slate</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_slate</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_slate</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Slate</item>
        
        
    </style>

    <style name="ActionBar.Solid.Slate" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_slate</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_slate</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_slate</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Slate</item>
    </style>

    <style name="ActionBar.Transparent.Slate" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_slate</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Slate</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Slate.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Slate</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Slate</item>
    </style>

</resources>
