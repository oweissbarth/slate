<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/take_shotinfo_shotid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/take_shotinfo_shotfieldsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/take_shotinfo_shotid"
        android:layout_alignBottom="@+id/take_shotinfo_shotid"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/take_shotinfo_shotcameramotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/take_shotinfo_shotid"
        android:layout_alignBottom="@+id/take_shotinfo_shotid"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/take_shotinfo_shotid"
        android:layout_marginTop="24dp"
        android:background="@color/lightgrey"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/take_shotinfo_shotcamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/take_shotinfo_shotid"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="19dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/take_shotinfo_shotfps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/take_shotinfo_shotcamera"
        android:layout_alignBottom="@+id/take_shotinfo_shotcamera"
        android:layout_alignRight="@+id/take_shotinfo_shotfieldsize"
        android:text="fps"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/take_shotinfo_shotcamera"
        android:layout_marginTop="24dp"
        android:background="@color/lightgrey"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/take_shotinfo_shotlens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/take_shotinfo_shotcamera"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginTop="24dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/take_shotinfo_shotfocallength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/take_shotinfo_shotlens"
        android:layout_alignBottom="@+id/take_shotinfo_shotlens"
        android:layout_alignRight="@+id/take_shotinfo_shotfps"
        android:text="mm"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>