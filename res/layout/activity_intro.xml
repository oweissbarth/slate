<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://shemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    >
    <LinearLayout
        android:background="@color/darkgrey"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        
        <ImageView
            android:src="@drawable/icon200"
            android:contentDescription="@string/app_name"
            android:layout_height="40sp"
            android:layout_width="40sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left"
        />
        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:typeface="monospace"
            android:textColor="@color/lightgrey"
            android:gravity="left"
            android:layout_weight="2" />
   </LinearLayout>

<LinearLayout
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/projectsSpinner"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.58" />

        <Button
            android:id="@+id/loadProjectButton"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:onClick="loadButtonEvent"
            android:text="@string/load" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    </LinearLayout>

    <Button
        android:id="@+id/new_project_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="newProjectCreationDialog"
        android:text="@string/newProject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/import_project_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/importProject" />

</LinearLayout>
 
</LinearLayout>